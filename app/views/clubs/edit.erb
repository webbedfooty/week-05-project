<h1>Edit <%= @club.name %></h1>

<form action="/clubs/<%= @club.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Name:
    <input type="text" name="name" value="<%= @club.name %>">
  </div>
  <div>
    City:
    <input type="text" name="city" value="<%= @club.city %>">
  </div>
  <div>
    <input type="submit" value="Update Club">
  </div>
</form>

<% if @clubs.count > 1 %>
  <h2>Delete This Club?</h2>
  <form action="/clubs/<%= @club.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <select name="new_club_id">
      <% @clubs.each do |c| %>
        <% unless c.id == @club.id %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% end %>
      <% end %>
    <input type="submit" value="Delete This Club!">
  </form>
<% end %>
