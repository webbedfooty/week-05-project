<title> da Clubs</title>

<% if @club.errors.any? %>
  <div>
    <h2>Errors:</h2>
    <ul>
      <% @club.errors.full_messages.each do |c| %>
        <li><%= c %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Edit <%= @club.name %></h1>

<form action="/clubs/<%= @club.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Name:
    <input type="text" name="name" value="<%= @club.name %>">
  </div>
  <div>
    City:
    <input type="text" name="city" value="<%= @club.city %>">
  </div>
  <div>
    Sponsors:
      <% @club.sponsors.each do |s| %>
    <input type="text" name="sponsor" value="<%= @club.sponsor %>">
    <li><%= s.name %></li>
    <% end %>
  </div>
  <div>
  <div>
    <input type="submit" value="Update Club">
  </div>
</form>
